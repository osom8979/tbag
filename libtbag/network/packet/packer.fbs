// Packer server/client IDL.

namespace libtbag.network.packet;

enum Type : byte
{
    Version = 0,
    Content,
}

struct Header
{
    type:Type; // Pack type.
    size:uint; // Full pack size except Header.
}

// Version type.
table VersionPack
{
    header:Header;
    major:byte = 0;
    minor:byte = 1;
}

// Content type.
table ContentPack
{
    header:Header;
    body:[byte];
}

root_type ContentPack;

